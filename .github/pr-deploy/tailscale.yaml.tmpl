apiVersion: apps/v1
kind: Deployment
metadata:
  name: $APP_NAME-tailscale
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:
    matchLabels:
      app.kubernetes.io/name: $APP_NAME-tailscale
  template:
    metadata:
      labels:
        app.kubernetes.io/name: $APP_NAME-tailscale
    spec:
      serviceAccountName: $APP_NAME-tailscale
      initContainers:
      - name: "sysctler"
        image: "busybox"
        securityContext:
          privileged: true
        command: ["/bin/sh"]
        args: ["-c", "sysctl -w net.ipv4.ip_forward=1 net.ipv6.conf.all.forwarding=1"]
        resources:
          requests:
            cpu: 50m
            memory: 100Mi
      containers:
        - name: tailscale
          image: hollie/tailscale-caddy-proxy:latest
          imagePullPolicy: Always
          securityContext:
            capabilities:
              add: ["NET_ADMIN"]
          resources:
            requests:
              cpu: 50m
              memory: 100Mi
          env:
          - name: CADDY_TARGET
            value: $(${SERVICE_NAME}_SERVICE_HOST):$SERVICE_PORT
          - name: TS_USERSPACE
            value: "false"
          - name: TS_HOSTNAME
            value: $HOSTNAME
          - name: TS_TAILNET
            value: $TAILNET_NAME
          - name: TS_AUTHKEY
            value: $TS_AUTHKEY
          - name: TS_KUBE_SECRET
            value: $APP_NAME-tailscale-auth
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: $APP_NAME-tailscale
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  name: $APP_NAME-tailscale
rules:
- apiGroups:
  - ""
  resources:
  - secrets
  verbs:
  - create
- apiGroups:
  - ""
  resourceNames:
  - $APP_NAME-tailscale-auth
  resources:
  - secrets
  verbs:
  - update
  - patch
  - get
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: $APP_NAME-tailscale
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: Role
  name: $APP_NAME-tailscale
subjects:
- kind: ServiceAccount
  name: $APP_NAME-tailscale
  namespace: $NAMESPACE
---
apiVersion: v1
kind: Secret
metadata:
  name: $APP_NAME-tailscale-auth

