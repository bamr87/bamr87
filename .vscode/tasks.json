{
  // ==================================================
  // UNIFIED VS CODE TASKS - Docker-First Development
  // ==================================================
  // Optimized for it-journey, zer0-mistakes, barodybroject
  // Last Updated: 2025-10-26
  
  "version": "2.0.0",
  "tasks": [
    
    // ==========================================
    // CORE DOCKER OPERATIONS
    // ==========================================
    {
      "label": "Docker: Compose Up (Detached)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "-d"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Start Docker containers in detached mode"
    },

    {
      "label": "Docker: Compose Stop",
      "type": "shell", 
      "command": "docker-compose",
      "args": ["stop"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Stop running Docker containers"
    },

    {
      "label": "Docker: Compose Down",
      "type": "shell",
      "command": "docker-compose", 
      "args": ["down"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Stop and remove Docker containers, networks"
    },

    {
      "label": "Docker: Rebuild (Force)",
      "type": "shell",
      "command": "docker-compose",
      "args": ["up", "--build", "--force-recreate", "-d"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Force rebuild and recreate all Docker containers"
    },

    {
      "label": "Docker: View Logs",
      "type": "shell",
      "command": "docker-compose",
      "args": ["logs", "-f", "--tail=100"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      },
      "isBackground": true,
      "problemMatcher": [],
      "detail": "Follow Docker container logs in real-time"
    },

    // ==========================================
    // APPLICATION SPECIFIC TASKS
    // ==========================================
    {
      "label": "Jekyll: Build Site",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "jekyll", "bundle", "exec", "jekyll", "build"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "dependsOn": "Docker: Compose Up (Detached)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Build Jekyll site inside Docker container"
    },

    {
      "label": "Django: Run Migrations",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "web", "python", "src/manage.py", "migrate"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "dependsOn": "Docker: Compose Up (Detached)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Run Django database migrations in Docker"
    },

    {
      "label": "Django: Create Superuser",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "web", "python", "src/manage.py", "createsuperuser"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "dependsOn": "Docker: Compose Up (Detached)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Create Django superuser in Docker container"
    },

    // ==========================================
    // TESTING TASKS
    // ==========================================
    {
      "label": "Test: Run All Tests",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "${input:serviceContext}", "${input:testCommand}"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Docker: Compose Up (Detached)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "dedicated",
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Run test suite in Docker container"
    },

    {
      "label": "Lint: Run All Linters",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "${input:serviceContext}", "${input:lintCommand}"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "test",
      "dependsOn": "Docker: Compose Up (Detached)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Run linting tools in Docker container"
    },

    // ==========================================
    // MAINTENANCE TASKS
    // ==========================================
    {
      "label": "Docker: Clean Up",
      "type": "shell",
      "command": "docker",
      "args": ["system", "prune", "-f"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      },
      "problemMatcher": [],
      "detail": "Clean up Docker system (containers, networks, images)"
    },

    {
      "label": "Dependencies: Update",
      "type": "shell",
      "command": "docker-compose",
      "args": ["exec", "${input:serviceContext}", "${input:updateCommand}"],
      "options": { "cwd": "${workspaceFolder}" },
      "group": "build",
      "dependsOn": "Docker: Compose Up (Detached)",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": [],
      "detail": "Update project dependencies in Docker container"
    },

    // ==========================================
    // MARKDOWN LINTING
    // ==========================================
    {
      "type": "markdownlint",
      "problemMatcher": ["$markdownlint"],
      "label": "Lint: Markdown Files",
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "clear": false
      },
      "detail": "Lint all Markdown files with markdownlint"
    }
  ],

  // ==========================================
  // INPUT VARIABLES
  // ==========================================
  "inputs": [
    {
      "id": "serviceContext",
      "description": "Docker service context",
      "type": "pickString",
      "options": [
        "jekyll",
        "web",
        "app"
      ],
      "default": "jekyll"
    },
    {
      "id": "testCommand",
      "description": "Test command to run",
      "type": "pickString", 
      "options": [
        "bundle exec rspec",
        "python src/manage.py test",
        "pytest",
        "npm test"
      ],
      "default": "bundle exec rspec"
    },
    {
      "id": "lintCommand",
      "description": "Lint command to run",
      "type": "pickString",
      "options": [
        "rubocop",
        "flake8 src/",
        "black --check src/",
        "eslint ."
      ],
      "default": "rubocop"
    },
    {
      "id": "updateCommand", 
      "description": "Update command to run",
      "type": "pickString",
      "options": [
        "bundle update",
        "pip install -r requirements.txt",
        "npm update"
      ],
      "default": "bundle update"
    }
  ]
}